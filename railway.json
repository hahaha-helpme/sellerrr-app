{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "npm run build"
  },
  "deploy": {
    "startCommand": "npm run start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "drainingSeconds": 30,
    "overlapSeconds": 0
  },
  "environments": {
    "production": {
      "deploy": {
        "appSleep": false
      }
    },
    "development": {
      "deploy": {
        "appSleep": true
      }
    }
  }
}